    <title>Piano Digital</title>
    <style>
        #piano {
            display: flex;
            justify-content: center;
        }

        .tecla {
            border: 1.2px solid black;
            height: 300px;
            cursor: pointer;
            user-select: none;
            position: relative;
        }

        .blanca {
            background-color: white;
            width: 120px;
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
        }

        .negra {
            background-color: black;
            width: 62px;
            margin-left: -20px;
            margin-right: -20px;
            z-index: 1;
            height: 165px;
        }

        .tecla-click {
            background-color: lightblue !important;
        }
    </style>
</head>
<body>
    <div id="piano">
        <!-- Aquí van las teclas del piano -->
        <!-- Primera octava -->
        <div class="tecla blanca" id="C"></div>
        <div class="tecla negra" id="Cs"></div>
        <div class="tecla blanca" id="D"></div>
        <div class="tecla negra" id="Ds"></div>
        <div class="tecla blanca" id="E"></div>
        <div class="tecla blanca" id="F"></div>
        <div class="tecla negra" id="Fs"></div>
        <div class="tecla blanca" id="G"></div>
        <div class="tecla negra" id="Gs"></div>
        <div class="tecla blanca" id="A"></div>
        <div class="tecla negra" id="As"></div>
        <div class="tecla blanca" id="B"></div>
        <!-- Segunda octava -->
        <div class="tecla blanca" id="C2"></div>
        <div class="tecla negra" id="Cs2"></div>
        <div class="tecla blanca" id="D2"></div>
        <div class="tecla negra" id="Ds2"></div>
        <div class="tecla blanca" id="E2"></div>
        <div class="tecla blanca" id="F2"></div>
        <div class="tecla negra" id="Fs2"></div>
        <div class="tecla blanca" id="G2"></div>
        <div class="tecla negra" id="Gs2"></div>
        <div class="tecla blanca" id="A2"></div>
        <div class="tecla negra" id="As2"></div>
        <div class="tecla blanca" id="B2"></div>
        <!-- Tercera octava -->
        <div class="tecla blanca" id="C3"></div>
        <div class="tecla negra" id="Cs3"></div>
        <div class="tecla blanca" id="D3"></div>
        <div class="tecla negra" id="Ds3"></div>
        <div class="tecla blanca" id="E3"></div>
    </div>

    <script>
        const audioSpriteURL = "https://static.wixstatic.com/mp3/9904ab_f94035579b234b7880fd52328cdc3b9c.mp3";

        const teclas = {
            "C": { start: 0, end: 1.4 },
            "Cs": { start: 1.7, end: 3.4 },
            "D": { start: 4, end: 5.4 },
            "Ds": { start: 6, end: 7.4 },
            "E": { start: 8, end: 9.4 },
            "F": { start: 10, end: 11.7 },
            "Fs": { start: 12, end: 13.4 },
            "G": { start: 14, end: 15.7 },
            "Gs": { start: 16, end: 17.4 },
            "A": { start: 18, end: 19.7 },
            "As": { start: 20, end: 21.4 },
            "B": { start: 22, end: 23.7 },
            "C2": { start: 24, end: 25.4 },
            "Cs2": { start: 26, end: 27.7 },
            "D2": { start: 28, end: 29.4 },
            "Ds2": { start: 30, end: 31.7 },
            "E2": { start: 32, end: 33.4 },
            "F2": { start: 34, end: 35.7 },
            "Fs2": { start: 36, end: 37.4 },
            "G2": { start: 38, end: 39.7 },
            "Gs2": { start: 40, end: 41.4 },
            "A2": { start: 42, end: 43.7 },
            "As2": { start: 44, end: 45.4 },
            "B2": { start: 46, end: 47.7 },
            "C3": { start: 48, end: 49.4 },
            "Cs3": { start: 50, end: 51.7 },
            "D3": { start: 52, end: 53.4 },
            "Ds3": { start: 54, end: 55.7 },
            "E3": { start: 56, end: 57.4 },
        };

        document.querySelectorAll('.tecla').forEach(tecla => {
            tecla.addEventListener('click', () => {
                const noteId = tecla.id;
                if (teclas[noteId]) {
                    const { start, end } = teclas[noteId];
                    const audio = new Audio(audioSpriteURL + "#t=" + start + "," + end);
                    audio.play();
                    tecla.classList.add('tecla-click'); // Agrega la clase para cambiar el color
                    setTimeout(() => {
                        tecla.classList.remove('tecla-click'); // Elimina la clase después de 300 milisegundos (0.3 segundos)
                    }, 300);
                }
            });
        });
    </script>
</body>
